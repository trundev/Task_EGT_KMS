    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) chat_server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/server_side/chat_server",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
        },
        {
            "name": "(gdb) chat_client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/client_side/chat_client",
            "args": ["localhost", "USERNAME"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
        },
        {
            "name": "debugpy: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["localhost", "tk_user"]
        },
    ]
}
